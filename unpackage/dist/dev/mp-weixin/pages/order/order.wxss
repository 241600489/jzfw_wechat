/* 水平间距 */
.uni-card {
  height: 350rpx;
  margin-top: 10rpx;
  padding: 10rpx 10rpx;
  position: relative;
}
.uni-card .content {
  display: flex;
  margin-top: 10rpx;
}
.uni-card .content .left ._img {
  width: 200rpx;
  height: 200rpx;
}
.uni-card .content .right {
  margin-left: 10rpx;
}
.uni-card .content .right .name {
  color: #333;
  font-size: 30rpx;
}
.uni-card .content .right .total {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  font-weight: bold;
}
.uni-card .content .right .uni-tag {
  display: block;
  position: absolute;
  left: 250rpx;
  bottom: 75rpx;
  width: 75rpx;
}
.uni-card .content .right .detail {
  position: absolute;
  bottom: 75rpx;
  right: 30rpx;
  color: #808080;
}
.uni-card .content .del {
  margin-top: 5rpx;
  position: absolute;
  height: 60rpx;
  width: 200rpx;
  bottom: 10rpx;
  right: 10rpx;
  color: #333;
  font-size: 28rpx;
}

