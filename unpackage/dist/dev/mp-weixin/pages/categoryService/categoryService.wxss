.menu-wrap {
  display: flex;
}
.menu-wrap .content {
  padding: 10rpx;
  width: 500rpx;
}
.menu-wrap .content image {
  margin: 20rpx auto;
  width: 500rpx;
}
.menu-wrap .content .row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.menu-wrap .content .row .products {
  margin: 20rpx 10rpx;
  width: 230rpx;
  height: 230rpx;
  text-align: center;
}
.menu-wrap .content .row .products .propic {
  display: block;
}
.menu-wrap .content .row .products .propic image {
  width: 180rpx;
  height: 180rpx;
}
.menu-wrap .content .row .products .proName {
  text-align: center;
}
.menu-wrap .content .row .noPro {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  text-align: center;
}
.menu-wrap .content .row .noPro image {
  display: inline-block;
  width: 400rpx;
  height: 300rpx;
}
.menu-wrap .content .row .noPro text {
  margin: 10rpx auto;
  font-size: 24rpx;
}

