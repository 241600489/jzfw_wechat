.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333;
}
.content .uni-card {
  height: 150rpx;
}
.content .uni-card .content1 {
  width: 500rpx;
  padding-left: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .uni-card .xiangqing {
  position: absolute;
  top: 95rpx;
  right: 60rpx;
}
.content .uni-margin-wrap {
  width: 100%;
}
.content .banner {
  height: 350rpx;
  background-color: #FD5554;
  border-radius: 8px;
  box-shadow: 0 0 10px 0 #aaaaaa;
}
.content .swiper {
  height: 500rpx;
  width: 90%;
  position: absolute;
  top: 136px;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border-radius: 8px;
}
.content .swiper-item {
  display: block;
  margin-top: 80rpx;
  height: 200rpx;
  text-align: center;
}
.content .swiper-item image {
  border-radius: 50rpx;
  height: 350rpx;
}
.content .menu-wrap {
  margin-top: 150rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #eee;
  padding: 10rpx 20rpx;
}
.content .menu-wrap .menu {
  margin: 10rpx 35rpx;
}
.content .menu-wrap .menu .icon_img {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.content .menu-wrap .menu .icon_img ._img {
  display: block;
  width: 80rpx;
  height: 80rpx;
}
.content .menu-wrap .menu text {
  font-size: 24rpx;
}
.content .uni-section {
  width: 650rpx;
}
.content .uni-section .uni-list-item {
  height: 150rpx;
}
.content .uni-section .uni-icons {
  position: absolute;
  top: 95rpx;
  right: 10rpx;
}

